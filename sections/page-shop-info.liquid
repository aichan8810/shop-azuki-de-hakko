{{ "page-shop-info.css" | asset_url | stylesheet_tag }}

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .ShopInfo{
    background-color: #D7B59D;
  }
  .ShopInfo__Container{
    background: #fff;
    padding: 7.5rem 0;
  }
</style>
<section class="ShopInfo section-{{ section.id }}-padding">
  <div class="section-pageInnerWidth ShopInfo__Container" data-flex="column">
    {% for value in shop.metaobjects.shop_factory.values %}
      <h2>
        {{ value.shop_name }}
      </h2>
      <hr>
      <p>
        {{ value.information | newline_to_br }}
      </p>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "店舗情報",
  "presets": [
    {
    "name": "店舗情報"
    }
  ],
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
    ]
}
{% endschema %}
