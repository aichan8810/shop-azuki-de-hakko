{{ "section-collection-banner.css" | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="collection-banner-container section-{{ section.id }}-padding brown-bg">
  <div class="collection-banner-inner-wrapper page-width">
    <div class="collection-banner">
      <div class="collection-banner-image-wrapper">
        {% if section.settings.banner_image %}
          <img
            src="{{ section.settings.banner_image | img_url: 'master' }}"
            alt="{% if section.settings.banner_title %} {{ section.settings.banner_title }} {% else %} {{ collection.title | escape }} {% endif %}"
            class="collection-banner-image"
          >
        {% else %}
          <img src="{{ collection.featured_image |  img_url: 'master' }}" alt="{{ collection.title | escape }}" class="collection-banner-image">
        {% endif %}
      </div>
      <div class="collection-banner-text-wrapper">
        <h3 class="collection-banner-title">
          {% if section.settings.banner_title %}
            {{ section.settings.banner_title }}
          {% else %}
            {{ collection.title | escape }}
          {% endif %}
        </h3>
        <p class="collection-banner-text">
          {% if section.settings.banner_text %}
            {{ section.settings.banner_text }}
          {% else %}
            {{ collection.description | newline_to_br }}
          {% endif %}
        </p>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "コレクション紹介バナー",
  "presets": [
    {
      "name": "コレクション紹介バナー"
    }
  ],
  "settings": [
      {
        "type": "text",
        "id": "banner_title",
        "label": "バナータイトル"
      },
      {
        "type": "textarea",
        "id": "banner_text",
        "label": "バナーテキスト"
      },
      {
        "type": "image_picker",
        "id": "banner_image",
        "label": "バナー画像"
      },
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }

    ]
}
{% endschema %}
